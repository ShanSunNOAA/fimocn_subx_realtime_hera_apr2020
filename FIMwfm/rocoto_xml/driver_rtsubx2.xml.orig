  <!ENTITY NPROC "80">
  <!ENTITY GLVL "7">
  <!ENTITY NVL "64">
  <!ENTITY FCST_INTERVAL "24">            <!-- needs to match ArchvIntvl in FIMnamelist! -->
  <!ENTITY FCST_LENGTH "768">
